// estimate pi using monte carlo methods
// calculates probability of random point 0 <= x,y < 1 being inside a quarter of a circle of radius 1
// then multiplies result by 4 to estimate pi
#include<cstdlib>
#include<cmath>
#include<iostream>

using namespace std;

int main()
{
	// gets user input for number of trials
	cout << "Enter number of trials: " << endl;
	int nTrials;
	cin >> nTrials;
		
	// generate and classify random numbers
	int results = 0;
	for (int i = 0; i != nTrials; ++i) {
		double x = rand() / (double)RAND_MAX;
		double y = rand() / (double)RAND_MAX;
		double distance = sqrt(pow(x, 2) + pow(y, 2));
		if (distance <= 1) {
			++results;
		}
	}

	// estimate area of quarter circle
	double qcircA = results / nTrials;	// qcircA = 0 even when results != 0 for some reason

	// calculate and display estimation of pi
	double mcPi = qcircA * 4;
	cout << "Estimate of pi = " << mcPi << endl;

	return 0;
}
	
	
